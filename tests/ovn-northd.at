  [ovn-nbctl --wait=sb ls-add ls0
   ovn-nbctl --wait=sb ls-add ls1
   ovn-nbctl --wait=sb ls-add ls2])
get_tunnel_keys
AT_CHECK([test $ls0 = 1 && test $ls1 = 2 && test $ls2 = 3])

